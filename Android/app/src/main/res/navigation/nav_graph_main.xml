<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/dashboardFragment"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.versilistyson.searchflix.presentation.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_dashboardFragment_to_mediaDetailsFragment"
            app:destination="@id/mediaDetailsFragment"
            app:enterAnim="@anim/fragment_fade_enter" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.versilistyson.searchflix.presentation.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.versilistyson.searchflix.presentation.favorites.FavoritesFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_favoritesFragment_to_mediaDetailsFragment"
            app:destination="@id/mediaDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/mediaDetailsFragment"
        android:name="com.versilistyson.searchflix.presentation.details.MediaDetailsFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_media_details" >
        <argument
            android:name="media"
            app:argType="com.versilistyson.searchflix.domain.entities.Media" />
        <argument
            android:name="title"
            app:argType="string"/>
    </fragment>
    <fragment
        android:id="@+id/mediaSearchFragment"
        android:name="com.versilistyson.searchflix.presentation.search.MediaSearchFragment"
        android:label="Search results for '{query}'"
        tools:layout="@layout/fragment_media_search" >
        <argument
            android:name="query"
            app:argType="string" />
        <argument
            android:name="mediaType"
            app:argType="com.versilistyson.searchflix.domain.entities.MediaType" />
        <action
            android:id="@+id/action_mediaSearchFragment_to_mediaDetailsFragment"
            app:destination="@id/mediaDetailsFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_mediaSearchFragment"
        app:destination="@id/mediaSearchFragment" />
</navigation>